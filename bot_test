@bot.message_handler(commands=['memes'])
def send_mem(message):
    img_name = random.choice(os.listdir("memes"))
    with open(f'memes/{img_name}', 'rb') as f:  
        bot.send_photo(message.chat.id, f)  
@bot.message_handler(commands=['memes_pov'])
